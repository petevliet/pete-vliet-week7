<%= form_for @course do |f| %>

<%= render partial: 'shared/errors', locals: {object: @course} %>

<br />
  <%= f.label :title %>
  <%= f.text_field :title %>
<br />
  <%= f.label 'Day?' %>
  <%= f.check_box (:day_night) %>
<br />
  <%= f.submit %>
<br />
  <%= link_to 'cancel', courses_path %>

<% end %>
